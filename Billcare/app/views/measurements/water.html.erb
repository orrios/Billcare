
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>
<div id="container" style="width:100%;height:400px;"></div>

<script>$(document).ready(function () {
  chart = new Highcharts.Chart({
    chart: {
      renderTo: 'container',
      type: 'area'
    },
    title: {
      text: 'Consumo del mes actual',
      style: {"color": "#7070", "fontWeight": "bold"}
    },
    subtitle: {
      text: ''
    },
    xAxis: {

      type: 'datetime'

    },
    yAxis: {
      title: {
        text: 'Cantidad consumida',
        style: {"color": "#7070", "fontWeight": "bold"}
      }
    },
    plotOptions: {
      series: {
        marker: {
          enabled: false,
          symbol: 'circle',
          radius: 2
        },
        fillOpacity: 0.5
      },
      flags: {
        tooltip: {
          xDateFormat: '%B %e, %Y'
        }
      }
    },


    series: [{
      color: "red",
      name: 'Limite establecido',
      type: "line",
      data: <%= @data2.to_json.html_safe %>,
      animation: {
        duration: 1000
      },
      enableMouseTracking: false

    }, {
      name: 'Consumo',
      data: <%= @data1.to_json.html_safe %>,
      animation: {
        duration: 3000
      }
    },
      {color: "orange",
      name: 'Maximo optimo en el tiempo',
      type: "line",
      enableMouseTracking: false,
      data: <%= @data3.to_json.html_safe %>,
        animation: {
          duration: 1000
        }

      }

    ]
  });

});</script>







